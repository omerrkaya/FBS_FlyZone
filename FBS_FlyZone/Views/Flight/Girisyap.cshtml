@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="account-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-7">
                <div class="account-form-area">
                    <div class="account-content">
                        <div class="text-center mb-4">
                            <span class="sub-title"><span>Giriş Yap</span></span>
                            <h2 class="section-title">Hesabınıza giriş yapın</h2>
                        </div>
                        <form class="account-form">
                            <div class="row mb-10-none">
                                <div class="col-xl-12 form-group">
                                    <label class="icon"><i class="las la-envelope"></i></label>
                                    <input type="email" class="form--control" name="email" placeholder="Kullanıcı Adı ya da E-Posta" required>
                                </div>
                                <div class="col-xl-12 form-group">
                                    <label class="icon"><i class="icon-Create_Password_icone"></i></label>
                                    <input type="password" class="form--control" name="password" placeholder="Şifre" required>
                                </div>
                                <div class="col-lg-12 form-group text-center">
                                    <button type="submit" class="btn--base w-100">Giriş Yap</button>
                                </div>
                                <div class="col-lg-12 text-center">
                                    <div class="or mt-10">
                                        <label>Veya</label>
                                    </div>
                                </div>
                                <div class="col-lg-12 form-group google-submit text-center">
                                    <button type="submit" class="btn--base w-100"><span class="mr-2"><img src="~/flynext/assets/images/google.png" alt="google"></span> Google ile Devam Et</button>
                                </div>
                                <div class="col-lg-12 text-center">
                                    <div class="account-item mt-10">
                                        <label>Henüz kayıt olmadınız mı? <a asp-controller="Flight" asp-action="Kayitol" class="text--base">Hesap oluşturun</a></label>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div> 
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .account-section {
        background-color: #28333d;
        padding: 120px 0;
    }

    .account-content {
        background-color: #fff;
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .account-content .section-title {
        font-size: 24px;
        font-weight: bold;
        margin-top: 10px;
    }

    .account-content .sub-title span {
        font-size: 18px;
        font-weight: bold;
        color: #28333d;
    }
</style>
