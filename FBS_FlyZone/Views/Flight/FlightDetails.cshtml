        box-shadow: 0 8px 22px rgba(0, 0, 0, 0.1);
    }

    .feature-icon img {
        width: 100%;
        height: 160px;
        object-fit: cover;
        border-radius: 10px;
          margin-bottom: 50px; 
    }

    .feature-content .title {
        font-size: 20px;
        font-weight: 600;
        color: #222;
        margin-bottom: 10px;
        padding-top: 30px;
    }

    .feature-content p {
        font-size: 15px;
        color: #555;
        flex-grow: 1;
       
    }
    .feature-item .price {
    font-size: 16px;
    font-weight: bold;
    color: #d0021b;
}
    .feature-btn a {
        display: inline-block;
        margin-top: 20px;
        background-color: #e60023;
        color: white;
        padding: 10px 22px;
        border-radius: 6px;
        font-size: 15px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .feature-btn a:hover {
        background-color: #c4001a;
    }

</style>

