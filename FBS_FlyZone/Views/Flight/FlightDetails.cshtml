<style>
/* Genel Ayarlar */
.container {
    max-width: 1000px;
    margin: auto;
}
.banner-section {
    background-image: url('@Url.Content("~/flynext/assets/images/siteicerik/kampanya.jpg")');
    background-size: cover;
    background-position: center;
    position: relative;
    padding: 100px 0;
}
.overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
}
.search-box {
    position: relative;
    z-index: 2;
    background: rgba(255, 255, 255, 0.9);
    padding: 20px;
    border-radius: 12px;
    text-align: center;
    background-color: black;
    background: rgba(0,0,0,0.5);

}
.title {
    color: #d0021b;
    font-weight: bold;
    margin-bottom: 20px;
}
.form-container {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: center;
}
.form-control {
    flex: 1 1 180px;
    padding: 8px;
    border-radius: 8px;
    border: 1px solid #ccc;
}
.btn-small {
    padding: 8px 12px;
    font-size: 14px;
}
    .feature-item {
        background: #fff;
        border-radius: 12px;
