@{
    ViewData["Title"] = "CheckinBiletyonetimi";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}


<style>
    
    .search-container {
        background: url('/yatra/images/flight/plane6.jpg') no-repeat center center/cover;
        width: 100%;
        min-height: 500px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px; 
    }

    
    .top-buttons {
        display: flex;
        flex-wrap: wrap; 
        gap: 10px;
        margin-bottom: 20px;
        width: 100%;
        justify-content: center;
    }

    .top-buttons a {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 12px 20px;
        border-radius: 5px;
        text-decoration: none;
        color: black;
        font-weight: bold;
        transition: background 0.3s;
        text-align: center;
        flex: 1 1 auto; /* Mobilde tam genişlik */
        min-width: 250px; /* Minimum buton genişliği */
    }

    .top-buttons a:hover {
        background-color: rgba(255, 255, 255, 1);
    }

    .selected {
        background-color: red !important;
        color: white !important;
    }

    .search-box {
        background: rgba(0, 0, 0, 0.6);
        padding: 20px;
        border-radius: 10px;
        display: flex;
        flex-wrap: wrap; /* Mobilde alt alta geçmesi için */
        gap: 15px;
        align-items: center;
        justify-content: center;
        width: 100%;
        max-width: 600px; /* Maksimum genişlik sınırı */
    }

    input[type="text"], input[type="date"], button {
        padding: 12px;
        font-size: 16px;
        border-radius: 5px;
        border: none;
        width: 100%; /* Mobilde tam genişlik */
        max-width: 300px;
    }

    .search-button {
        background-color: red;
        color: white;
        font-size: 20px;
        cursor: pointer;
        padding: 12px 18px;
        border-radius: 5px;
        border: none;
        width: auto; /* Buton için özel genişlik */
        min-width: 50px;
    }

    /* Mobil cihazlar için medya sorguları */
    @@media screen and (max-width: 768px) {
        .search-container {
            padding: 15px;
        }

        .top-buttons {
            flex-direction: column;
        }

        .top-buttons a {
            width: 100%;
        }

        .search-box {
            padding: 15px;
        }

        input[type="text"], input[type="date"] {
            font-size: 14px;
        }
    }
</style>

<div class="search-container">
    <!-- Üstteki Butonlar -->
    <div class="top-buttons">
        <a asp-controller="Flight" asp-action="Flight" class="button">Uçuş Ara / Bilet Al</a>
        <a asp-controller="Flight" asp-action="CheckinBiletyonetimi" class="button selected">Check-in / Bilet Yönetimi</a>
        <a asp-controller="Flight" asp-action="UcusDurumu" class="button">Uçuş Durumu</a>
    </div>

    <!-- Arama Kutusu -->
    <div class="search-box">
        <input type="text" placeholder="Bilet ya da Rezervasyon Kodu">
        <input type="text" placeholder="Yolcunun Soyadı">
        <button class="search-button" onclick="window.location.href='/CheckInPage'">></button>
    </div>
</div>

<script>
    // Sayfa yüklendiğinde tarih girişine bugünün tarihini koy
    document.getElementById('flight-date').valueAsDate = new Date();
</script>
