@using EntityLayer.Concrete
@using System.Globalization
@model List<Flight>

@{
	ViewData["Title"] = "SearchedFlight";
	Layout = "~/Views/Shared/UserLayout.cshtml";
}

<div class="dark" style="height:100px">
</div>

<div class="custom-wrapper" style="font-family:monospace;">
	<div id="flight-list">
		@foreach (var flight in Model)
		{
			var arrivalTime = flight.Flight_DateTime.AddHours(flight.Estimated_Time.Hours).AddMinutes(flight.Estimated_Time.Minutes);
			string totalPrice = ((decimal)flight.TotalPrice).ToString("F2");

			<div class="flight-container">
				<div class="flight-info">
					<div class="departure">
						<span class="time">@flight.Flight_DateTime.ToString("HH:mm") </span>
						<span class="city">@flight.DepartureAirport?.AP_City (@flight.DepartureAirport?.IATA_Code)</span>
						<span class="airport">@flight.DepartureAirport?.Airport_Name</span>
					</div>

					<div class="flight-duration">
						<span class="direct">Direkt</span>
						<span class="duration">@($"{flight.Estimated_Time.Hours} sa {flight.Estimated_Time.Minutes} dk")</span>
						<span class="plane-icon">✈️</span>
					</div>

					<div class="arrival">
						<span class="time">@arrivalTime.ToString("HH:mm")</span>
						<span class="city">@flight.ArrivalAirport?.AP_City (@flight.ArrivalAirport?.IATA_Code)</span>
						<span class="airport">@flight.ArrivalAirport?.Airport_Name</span>
					</div>

					<button class="details-btn" style="box-shadow: 5px 3px rgba(0,0,0,0.3);">Detay</button>
					<div class="details-price">
						<span class="price">@totalPrice TRY</span>
						<br />
						<a href="@Url.Action("FlightDetails", "Flight", new { id = flight.FlightID , userid = ViewBag.UserId})" class="buy">Satın Al</a>
					</div>
				</div>
			</div>

			<div class="modal-bg">
				<div class="modal" style="text-align:center; ">
					<span class="close-btn">&times;</span>
					<h2 style="text-align:center; font-family:monospace ; color:#dcbb87;">Seyahat Detayı</h2>
					<p class="date">@flight.Flight_DateTime.ToString("dd MMMM yyyy, dddd", new CultureInfo("tr-TR"))</p>
					<div class="airline-info">
						<span>✈️ @flight.Airline.Airlines_Name</span>
						<span>@flight.Flight_Code</span>
						<span>⏰ @($"{flight.Estimated_Time.Hours} sa {flight.Estimated_Time.Minutes} dk")</span>
					</div>
					<div class="route">
						<div class="departure">
							<strong>Kalkış</strong>
							<span class="time">@flight.Flight_DateTime.ToString("HH:mm")</span>
							<span class="city">@flight.DepartureAirport?.AP_City (@flight.DepartureAirport?.IATA_Code)</span>
							<span class="airport">@flight.DepartureAirport?.Airport_Name</span>
						</div>
						<div class="plane">
							<span class="icon">✈️</span>
							<span>@flight.Aircraft?.Aircraft_Model</span>
						</div>
						<div class="arrival">
							<strong>Varış</strong>
							<span class="time">@arrivalTime.ToString("HH:mm")</span>
							<span class="city">@flight.ArrivalAirport?.AP_City (@flight.ArrivalAirport?.IATA_Code)</span>
							<span class="airport">@flight.ArrivalAirport?.Airport_Name</span>
						</div>
					</div>
				</div>
			</div>

		}
	</div>

	<!-- Sayfalama Butonları -->
	<div class="pagination" id="pagination">
		<button onclick="changePage('prev')" style="box-shadow: 5px 3px rgba(0,0,0,0.3);">
			Önceki
		</button>
		<button onclick="changePage('next')" style="box-shadow: 5px 3px rgba(0,0,0,0.3);">
			Sonraki
		</button>
	</div>
</div>



<style>

	 

	.buy {
		background-color: #dcbb87;
		width: 50%;
		box-shadow: 5px 3px rgba(0,0,0,0.3);
		border-radius: 5px;
		text-decoration: none;
		color: #19232D;
		font-weight: bold;
	}

		.buy:hover {
			background-color: #19232D;
			color: #dcbb87;
			transition: background-color 0.4s;
		}

	.pagination {
		display: flex;
		justify-content: center;
		margin-top: 20px;
		margin-bottom: 30px;
	}

		.pagination button {
			padding: 10px 20px;
			margin: 0 5px;
			background: #dcbb87;
			color: #19232D;
			border: none;
			border-radius: 5px;
			cursor: pointer;
		}

			.pagination button:hover {
				background-color: #19232D;
				color: #dcbb87;
				transition: background-color 0.3s;
			}

	.custom-wrapper {
		background-color:#3d3d3d;
		display: flex;
		flex-direction: column;
		align-items: center;
		padding-top: 70px; /* Navbar’a çarpmadan başlasın */
	}

	body.custom-wrapper {
		display: flex !important;
		justify-content: center !important;
		align-items: center !important;
	}

	.flight-container {
		background-color: #19232D;
		color: #dcbb87;
		box-shadow: 11px 8px rgba(0,0,0,0.3);
		border-radius: 8px;
		padding: 20px;
		width: 1270px;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		margin-bottom: 20px;
		gap: 40px;
	}

	.flight-info {
		display: flex;
		align-items: center;
		justify-content: space-between;
		width: 100%;
		gap: 20px;
	}

	/* Her bir bilgi bloğunun genişliği sabitlendi, kayma engellendi */
	.departure, .arrival, .flight-duration, .details-price {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		width: 250px;
		min-height: 100px;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
	}

	.time {
		font-size: 24px;
		font-weight: bold;
	}

	.city {
		font-size: 16px;
		font-weight: bold;
		margin-top: 5px;
	}

	.airport {
		width: 100%;
		font-size: 14px;
		color: #dcbb87;
		margin-top: 2px;
	}

	.flight-duration {
		color: #dcbb87;
	}

	.direct {
		font-size: 14px;
		margin-bottom: 5px;
	}

	.duration {
		font-size: 14px;
	}

	.plane-icon {
		font-size: 24px;
		margin-top: 5px;
		color: #dcbb87;
	}

	.details-price {
		font-size: 16px;
	}

	.details {
		cursor: pointer;
		color: #dcbb87;
		margin-bottom: 10px;
	}

	.price {
		font-weight: bold;
		font-size: 18px;
		color: #dcbb87;
	}

	.flight-card {
		background-color: #dcbb87;
		color: #19232D;
		padding: 20px;
		border-radius: 8px;
		box-shadow: 0 4px 10px rgba(0,0,0,0.3);
		text-align: center;
	}

	.flight-info span {
		display: block;
		margin: 5px 0;
	}

	.details-btn {
		margin-top: 10px;
		padding: 6px 12px;
		border: none;
		background-color: #dcbb87;
		color: #19232D;
		border-radius: 4px;
		cursor: pointer;
	}

		.details-btn:hover {
			background-color: #19232D;
			color: #dcbb87;
			transition: background-color 0.4s;
		}

	/* Modal Arkaplanı */
	.modal-bg {
		display: none;
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: rgba(0,0,0,0.5);
		justify-content: center;
		align-items: center;
		z-index: 9999;
		animation: fadeIn 0.3s ease-in-out;
	}

	/* Modal İçeriği */
	.modal {
		display: flow;
		background-color: #19232D;
		color: #dcbb87;
		padding: 20px;
		border-radius: 8px;
		width: 700px;
		height: 300px;
		position: relative;
		transform: scale(0.7);
		animation: scaleUp 0.3s forwards ease-in-out;
	}

	.modal-bg.show {
		display: flex;
		opacity: 1;
	}

	.close-btn {
		position: absolute;
		top: 10px;
		right: 15px;
		font-size: 24px;
		cursor: pointer;
		transition: color 0.3s;
	}

		.close-btn:hover {
			color: #dcbb87;
		}

	.airline-info {
		display: flex;
		justify-content: space-around;
		background-color: #dcbb87;
		color: #19232D;
		padding: 10px;
		border-radius: 4px;
		margin-top: 10px;
	}

	.route {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-top: 15px;
	}

	.departure, .arrival {
		text-align: center;
	}

	.plane {
		text-align: center;
	}

	.icon {
		font-size: 24px;
		color: #007bff;
	}

	.date {
		font-weight: bold;
		text-align: center;
		margin-top: 10px;
	}

	/* Animasyonlar */
	@@keyframes fadeIn {
		from {
			opacity: 0;
		}

		to {
			opacity: 1;
		}
	}

	@@keyframes scaleUp {
		from {
			transform: scale(0.7);
		}

		to {
			transform: scale(1);
		}
	}

	/*---------------------------------------*/


</style>



<script>
	document.addEventListener("DOMContentLoaded", function () {
		const detailButtons = document.querySelectorAll('.details-btn');
		const modals = document.querySelectorAll('.modal-bg');

		detailButtons.forEach((button, index) => {
			const modal = modals[index];

			button.addEventListener('click', function () {
				modal.classList.add("show");
			});

			const closeBtn = modal.querySelector('.close-btn');

			closeBtn.addEventListener('click', function () {
				modal.classList.remove("show");
			});

			window.addEventListener('click', function (e) {
				if (e.target === modal) {
					modal.classList.remove("show");
				}
			});
		});
	});

		let currentPage = 1;
	const itemsPerPage = 5;

	function showPage(page) {
		const flightContainers = document.querySelectorAll('.flight-container');
		const totalItems = flightContainers.length;

		// Sayfa başına gösterilecek öğelerin başlangıç ve bitiş indekslerini hesapla
		const startIndex = (page - 1) * itemsPerPage;
		const endIndex = startIndex + itemsPerPage;

		// Tüm uçuşları gizle
		flightContainers.forEach((container, index) => {
			if (index >= startIndex && index < endIndex) {
				container.style.display = 'block'; // Bu sayfada gösterilecek uçuşlar
			} else {
				container.style.display = 'none'; // Diğer uçuşlar gizlenecek
			}
		});
	}

	function changePage(direction) {
		const flightContainers = document.querySelectorAll('.flight-container');
		const totalItems = flightContainers.length;
		const totalPages = Math.ceil(totalItems / itemsPerPage);

		if (direction === 'next' && currentPage < totalPages) {
			currentPage++;
		} else if (direction === 'prev' && currentPage > 1) {
			currentPage--;
		}

		showPage(currentPage);
	}

	// Sayfa ilk yüklendiğinde ilk sayfayı göster
	document.addEventListener('DOMContentLoaded', () => {
		showPage(currentPage);
	});


</script>



