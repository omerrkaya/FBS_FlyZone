<script>
   function toggleContent() {
    var membership = document.querySelector('input[name="membership"]:checked')?.value;
    var feedbackType = document.querySelector('input[name="feedbackType"]:checked')?.value;

    // ID'lerin doğruluğunu kontrol edelim
    var milesLoginContent = document.getElementById("milesLoginContent");
    var newFeedbackContent = document.getElementById("newFeedbackContent");
    var previousFeedbackContent = document.getElementById("previousFeedbackContent");

    // Eğer elemanlar varsa görünürlüğü kontrol et
    if (milesLoginContent) {
        milesLoginContent.style.display = (membership === "miles") ? "block" : "none";
    }
    if (newFeedbackContent) {
        newFeedbackContent.style.display = (feedbackType === "new") ? "block" : "none";
    }
    if (previousFeedbackContent) {
        previousFeedbackContent.style.display = (feedbackType === "previous") ? "block" : "none";
    }
}

// Sayfa yüklendiğinde varsayılan seçimleri uygula
window.onload = function () {
    toggleContent();

    // Radio butonlara tıklanınca içerikleri güncelle
    var radioButtons = document.querySelectorAll('input[type="radio"]');
    radioButtons.forEach(function (radio) {
        radio.addEventListener("change", toggleContent);
    });
};

</script>
