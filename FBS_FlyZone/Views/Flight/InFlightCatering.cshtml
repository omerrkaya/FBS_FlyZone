	}

	.card {
		width: 30%;
		padding: 20px;
		border-radius: 10px;
		background-color: white;
		box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
	}

		.card img {
			width: 100%;
			border-radius: 10px;
		}

		.card h2 {
			margin: 15px 0;
