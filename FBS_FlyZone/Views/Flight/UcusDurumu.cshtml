@{
    ViewData["Title"] = "UcusDurumu";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!-- Mobil uyumluluk için meta viewport etiketi -->
<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

<div class="search-container">
    <!-- Üstteki Butonlar -->
    <div class="top-buttons">
        <a asp-controller="Flight" asp-action="Flight" class="button">Uçuş Ara / Bilet Al</a>
        <a asp-controller="Flight" asp-action="CheckinBiletyonetimi" class="button">Check-in / Bilet Yönetimi</a>
        <a asp-controller="Flight" asp-action="UcusDurumu" class="button selected">Uçuş Durumu</a>
    </div>

    <!-- Arama Kutusu -->
    <div class="search-box">
        <div class="input-group">
            <select id="search-type" class="form-control">
                <option value="route" selected>Güzergah</option>
                <option value="arrival">Varış</option>
                <option value="departure">Kalkış</option>
                <option value="flight-number">Uçuş No</option>
            </select>
        </div>

        <div class="input-group">
            <input type="text" class="form-control" id="flight-input" placeholder="Uçuş numarasını girin" onkeypress="return event.charCode >= 48 && event.charCode <= 57">
        </div>

        <div class="input-group">
            <input type="date" id="flight-date" class="form-control">
        </div>

        <button class="search-button" onclick="window.location.href='#'">
            <i class="fas fa-search"></i>
            <span>Ara</span>
        </button>
    </div>
</div>

<style>
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        background-color: #f5f5f5;
    }

    .search-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 20px;
    }

    /* Üst Butonlar */
    .top-buttons {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .button {
        background-color: transparent;
        color: #004AAD;
        border: 2px solid #004AAD;
        padding: 12px 24px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        border-radius: 5px;
        transition: all 0.3s ease;
        text-decoration: none;
        white-space: nowrap;
    }

    .button:hover, .button.selected {
        background-color: #004AAD;
        color: white;
        text-decoration: none;
    }

    
    .search-box {
        background-color: white;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
    }

    .input-group {
        flex: 1;
        min-width: 200px;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 16px;
        transition: border-color 0.3s ease;
    }

    .form-control:focus {
        outline: none;
        border-color: #004AAD;
    }

    select.form-control {
        appearance: none;
        background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 10px center;
        background-size: 1em;
    }

    .search-button {
        background-color: #004AAD;
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        font-weight: bold;
        transition: background-color 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .search-button:hover {
        background-color: #003580;
    }

    
    @@media (max-width: 991px) {
        .search-container {
            margin: 1rem auto;
        }

        .top-buttons {
            gap: 15px;
        }

        .button {
            padding: 10px 20px;
            font-size: 15px;
        }
    }

    @@media (max-width: 767px) {
        .search-box {
            padding: 1.5rem;
        }

        .input-group {
            flex: 1 1 100%;
        }

        .search-button {
            width: 100%;
            justify-content: center;
        }
    }

    @@media (max-width: 480px) {
        .search-container {
            padding: 0 10px;
        }

        .top-buttons {
            flex-direction: column;
        }

        .button {
            width: 100%;
            text-align: center;
            padding: 10px;
            font-size: 14px;
        }

        .search-box {
            padding: 1rem;
        }

        .form-control {
            padding: 10px;
            font-size: 14px;
        }
    }
</style>

<script>
    // Sayfa yüklendiğinde tarih girişine bugünün tarihini koycaz
    document.getElementById('flight-date').valueAsDate = new Date();

    // Input placeholder'ını seçime göre güncellememiz gerekiyo
    document.getElementById('search-type').addEventListener('change', function() {
        const input = document.getElementById('flight-input');
        switch(this.value) {
            case 'route':
                input.placeholder = 'Örn: İstanbul - Ankara';
                input.onkeypress = null;
                break;
            case 'arrival':
                input.placeholder = 'Varış havaalanı';
                input.onkeypress = null;
                break;
            case 'departure':
                input.placeholder = 'Kalkış havaalanı';
                input.onkeypress = null;
                break;
            case 'flight-number':
                input.placeholder = 'Uçuş numarasını girin';
                input.onkeypress = function(event) {
                    return event.charCode >= 48 && event.charCode <= 57;
                };
                break;
        }
    });
</script>

