@{
    ViewData["Title"] = "Flightdeals";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="flight-search" style="background-image: url('/yatra/images/ucusfirsatları.jpg'); background-size: cover; background-position: center; padding: 50px 0;">
    <div class="container">
        <div class="search-box">
            <h2 class="title">TRY 1,877 ile başlayan uçuş tekliflerini inceleyin ve hemen rezervasyonunuzu yapın!</h2>

            <div class="form-container">
                <!-- Gidiş-Dönüş / Tek Yön Seçimi -->
                <select class="form-control">
                    <option value="round-trip" selected>Gidiş-Dönüş</option>
                    <option value="one-way">Tek Yön</option>
                </select>

                <!-- Sınıf Seçimi -->
                <select class="form-control">
                    <option value="economy">Ekonomi</option>
                    <option value="business">Business</option>
                </select>

                <!-- Yolcu ve Çocuk Sayısı -->
                <input type="text" class="form-control" placeholder="Yetişkin Sayısı">
                <input type="text" class="form-control" placeholder="Çocuk Sayısı" >

                <!-- Kalkış ve Varış Noktası -->
                <input type="text" class="form-control" placeholder="Kalkış noktasını girin">
                <input type="text" class="form-control" placeholder="Varış noktasını girin">

                <!-- Gidiş ve Dönüş Tarihi -->
                <input type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                <input type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")">

                <!-- Uçuş Ara Butonu -->
                <button class="btn btn-danger">Uçuş Ara</button>
            </div>
        </div>
    </div>
</section>
<section class="popular-flights">
    <div class="container">
        <h2 class="title">En Popüler Uçuş Rotalarımızı Keşfedin.</h2>
        <div class="filter-container">
            <input type="text" class="form-control" placeholder="Kalkış noktasını girin">
            <input type="text" class="form-control" placeholder="Varış noktanızı girin">
            <select class="form-control">
                <option value="economy">Ekonomi</option>
                <option value="business">Business</option>
            </select>
        </div>
        <div class="flights-grid">
            <div class="flight-card">
                <img src="/yatra/images/newyork.jpg" alt="Uçuş 1">
                <h3>İstanbul (IST) - New York (JFK)</h3>
                <p>15 Nisan Sal - 24 Nisan Per</p>
                <p class="price">TRY 22,672</p>
                <button class="btn btn-danger">Şimdi Yer Ayırt</button>
            </div>
            <div class="flight-card">
                <img src="/yatra/images/ankara.jpg" alt="Uçuş 2">
                <h3>İstanbul (IST) - Ankara (ESB)</h3>
                <p>16 Mart Paz - 20 Mart Per</p>
                <p class="price">TRY 3,027</p>
                <button class="btn btn-danger">Şimdi Yer Ayırt</button>
            </div>
            <div class="flight-card">
                <img src="/yatra/images/istanbul.jpg" alt="Uçuş 3">
                <h3>Ankara (ESB) - İstanbul (IST)</h3>
                <p>19 Mart Çar - 22 Mart Cmt</p>
                <p class="price">TRY 3,026</p>
                <button class="btn btn-danger">Şimdi Yer Ayırt</button>
            </div>
            <div class="flight-card">
                <img src="/yatra/images/antalya.jpg" alt="Uçuş 4">
                <h3>İstanbul (IST) - Antalya (AYT)</h3>
                <p>16 Mart Paz - 19 Mart Çar</p>
                <p class="price">TRY 2,625</p>
                <button class="btn btn-danger">Şimdi Yer Ayırt</button>
            </div>
        </div>
    </div>
</section>

<style>
    .container {
        max-width: 1000px;
        margin: auto;
    }
    .search-box {
        background: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 10px;
        text-align: center;
    }
    .title {
        color: #d0021b;
        font-weight: bold;
        margin-bottom: 20px;
    }
    .form-container {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: center;
    }
    .form-control {
        flex: 1 1 200px;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }
    .btn-danger {
        flex: 1 1 200px;
        padding: 12px;
        font-size: 16px;
    }
.popular-flights {
    padding: 50px 0;
    background-color: #f8f9fa;
    text-align: center;
}

.popular-flights h2 {
    font-size: 24px;
    margin-bottom: 20px;
    font-weight: bold;
}

.filter-container {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-bottom: 20px;
    flex-wrap: wrap;
}

.filter-container .form-control {
    flex: 1 1 200px;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #ccc;
}

.flights-grid {
    display: flex;
    justify-content: space-between;  /* Kartlar arasındaki boşluğu eşit şekilde dağıtır */
    flex-wrap: wrap;  /* Kartlar taşarsa bir alt satıra geçer */
    gap: 20px;  /* Kartlar arasında mesafe */
}

.flight-card {
    background: white;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    width: calc(25% - 20px);  /* 4 kart için %25 genişlik */
    text-align: left;
    margin-bottom: 20px;
}

.flight-card img {
    width: 100%;
    height: 150px;
    object-fit: cover;
}

.flight-card-content {
    padding: 15px;
}

.flight-card h3 {
    font-size: 18px;
    margin-bottom: 5px;
}

.flight-card p {
    font-size: 14px;
    color: #555;
    margin-bottom: 10px;
}

.flight-card .price {
    font-size: 16px;
    font-weight: bold;
    color: #d0021b;
}

.btn-reserve {
    display: block;
    width: 100%;
    background-color: #d0021b;
    color: white;
    text-align: center;
    padding: 10px;
    border-radius: 0 0 10px 10px;
    text-decoration: none;
    font-weight: bold;
}

.btn-reserve:hover {
    background-color: #a00116;
}

</style>
