@{
    ViewData["Title"] = "BusinessClass";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<div class="header-buttons">
    <a asp-controller="Flight" asp-action="BusinessClass" class="class-btn">Business Class</a>
    <a asp-controller="Flight" asp-action="EconomyClass" class="class-btn">Economy Class</a>
</div>


<div class="container-fluid p-0">
    <div class="position-relative">
        <img src="~/yatra/images/businessclass.jpg" class="img-fluid w-100" style="height: 784px; object-fit: cover;" alt="Business Class">

        <!-- Resmin Üstündeki Yazılar -->
        <div class="text-overlay position-absolute top-50 start-50 translate-middle text-center text-white">
            <h1 class="display-2 fw-bold border-black">Economy Class</h1>
            <p class="lead text-white">
               Türk Hava Yolları ayrıcalıklarını ekonomik fiyatlarla keşfetmeye ne dersiniz? Bütçenize en uygun fiyatlarla yolculuk yapma hedefinizi Economy Class ile bir adım öne taşıyoruz.
            </p>
        </div>

        <!-- Özellikler Sabit, Resmin Üzerinde -->
        <div class="features position-absolute bottom-60 w-100 d-flex justify-content-around text-white py-3">
            <div class="feature">
                <img src="~/yatra/images/seat.jpg" alt="Geniş aralıklı koltuklar" class="feature-icon">
                <span>Geniş aralıklı koltuklar</span>
            </div>
            <div class="feature">
                <img src="~/yatra/images/kit.jpg" alt="Seyahat kiti" class="feature-icon">
                <span>Seyahat kiti</span>
            </div>
            <div class="feature">
                <img src="~/yatra/images/eglence.jpg" alt="Uçak içi eğlence" class="feature-icon">
                <span>Uçak içi eğlence</span>
            </div>
            <div class="feature">
                <img src="~/yatra/images/meall.jpg" alt="Lezzetli ikramlar" class="feature-icon">
                <span>Lezzetli ikramlar</span>
            </div>
            
        </div>
    </div>
</div>

<style>
    /* Butonlar */
    .header-buttons {
        display: flex;
        justify-content: center;
        gap: 30px;
        margin-top: 10px; /* Header kısmıyla arasında boşluk */
        margin-bottom: 10px; /* Resimle arasında boşluk */
        z-index: 10;
        border-top: 1px solid #000000; /* Üst çizgi */
        position: relative; /* Kaydırma sorununu engellemek için */
        padding: 10px 0;
    }

    .class-btn {
        background-color: transparent;
        color: #004AAD;
        border: 2px solid #004AAD;
        padding: 10px 20px;
        font-size: 18px;
        font-weight: bold;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s, color 0.3s;
    }

    .class-btn:hover {
        background-color: #004AAD;
        color: white;
    }

    /* Resim Üstü Yazılar */
    .text-overlay h1 {
        font-size: 4rem;
        font-weight: bold;
        color: white;
        text-shadow: 2px 2px 5px black;
        border: 3px solid black;
        padding: 10px;
    }

    .text-overlay p {
        font-size: 1.25rem;
        color: white;
        background-color: rgba(0, 0, 0, 0.4); /* Şeffaf arka plan */
        padding: 20px;
        border-radius: 10px;
    }
/* Özellikler Sabit, Resmin Üzerinde */
.features {
    display: flex;
    justify-content: center; /* Öğeleri yatayda ortalar */
    align-items: center; /* Öğeleri dikeyde ortalar */
    position: absolute;
    bottom: 130px; /* Resmin altına 130px kadar kaydırdım */
    width: 100%;
    background-color: rgba(0, 0, 0, 0.5); /* Hafif opak arka plan */
    padding: 10px 0;
    z-index: 5;
}

.feature {
    text-align: center;
    margin: 0 5px; /* Özellikler arasındaki boşluğu 5px'ye düşürdük */
    color: white;
}

.feature-icon {
    width: 60px; /* İkon boyutunu sabit tutuyoruz */
    height: 60px;
}

.feature span {
    display: block;
    margin-top: 8px; /* İkon ile yazı arasındaki boşluğu azaltıyoruz */
    color: white;
    font-weight: bold;
}

</style>
