@{
    ViewData["Title"] = "Yeni Uçuş Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Flights">Uçuşlar</a></li>
                    <li class="breadcrumb-item active">Yeni Uçuş</li>
                </ol>
            </nav>
            <h2 class="mb-1">Yeni Uçuş Ekle</h2>
            <p class="text-muted">Sisteme yeni bir uçuş kaydı oluşturun.</p>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="AddFlight" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="AirlineID" class="form-label">Havayolu</label>
                                <select id="AirlineID" name="AirlineID" class="form-select" required>
                                    <option value="">Havayolu Seçin</option>
                                    @foreach (var airline in ViewBag.Airlines ?? new List<SelectListItem>())
                                    {
                                        <option value="@airline.Value">@airline.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="AircraftID" class="form-label">Uçak</label>
                                <select id="AircraftID" name="AircraftID" class="form-select" required>
                                    <option value="">Uçak Seçin</option>
                                    @foreach (var aircraft in ViewBag.Aircrafts ?? new List<SelectListItem>())
                                    {
                                        <option value="@aircraft.Value">@aircraft.Text</option>
                                    }
                                </select>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="DepartureAirportID" class="form-label">Kalkış Havaalanı</label>
                                <select id="DepartureAirportID" name="DepartureAirportID" class="form-select" required>
                                    <option value="">Havaalanı Seçin</option>
                                    @foreach (var airport in ViewBag.Airports ?? new List<SelectListItem>())
                                    {
                                        <option value="@airport.Value">@airport.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="ArrivalAirportID" class="form-label">Varış Havaalanı</label>
                                <select id="ArrivalAirportID" name="ArrivalAirportID" class="form-select" required>
                                    <option value="">Havaalanı Seçin</option>
                                    @foreach (var airport in ViewBag.Airports ?? new List<SelectListItem>())
                                    {
                                        <option value="@airport.Value">@airport.Text</option>
                                    }
                                </select>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="FlightNumber" class="form-label">Uçuş Numarası</label>
                                <input id="FlightNumber" name="FlightNumber" class="form-control" required />
                                <div class="form-text">Örnek: TK1234, PC2234</div>
                            </div>
                            <div class="col-md-6">
                                <label for="Status" class="form-label">Durum</label>
                                <select id="Status" name="Status" class="form-select" required>
                                    <option value="Scheduled">Planlandı</option>
                                    <option value="OnTime">Zamanında</option>
                                    <option value="Delayed">Gecikti</option>
                                    <option value="Cancelled">İptal Edildi</option>
                                    <option value="Completed">Tamamlandı</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="DepartureTime" class="form-label">Kalkış Zamanı</label>
                                <input id="DepartureTime" name="DepartureTime" class="form-control" type="datetime-local" required />
                            </div>
                            <div class="col-md-6">
                                <label for="ArrivalTime" class="form-label">Varış Zamanı</label>
                                <input id="ArrivalTime" name="ArrivalTime" class="form-control" type="datetime-local" required />
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label for="EconomyPrice" class="form-label">Ekonomi Fiyatı (TL)</label>
                                <input id="EconomyPrice" name="EconomyPrice" class="form-control" type="number" min="0" step="0.01" required />
                            </div>
                            <div class="col-md-4">
                                <label for="BusinessPrice" class="form-label">Business Fiyatı (TL)</label>
                                <input id="BusinessPrice" name="BusinessPrice" class="form-control" type="number" min="0" step="0.01" required />
                            </div>
                            <div class="col-md-4">
                                <label for="FirstClassPrice" class="form-label">First Class Fiyatı (TL)</label>
                                <input id="FirstClassPrice" name="FirstClassPrice" class="form-control" type="number" min="0" step="0.01" />
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="Gate" class="form-label">Kapı</label>
                            <input id="Gate" name="Gate" class="form-control" />
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Flights" class="btn btn-secondary">İptal</a>
                            <button type="submit" class="btn btn-primary">Uçuş Ekle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Yardım</h5>
                </div>
                <div class="card-body">
                    <h6>Uçuş Numarası</h6>
                    <p class="small text-muted">Uçuş numarası havayolu kodunu (2 karakter) içermelidir. Örneğin: TK1234 (Turkish Airlines)</p>
                    
                    <h6 class="mt-4">Fiyatlar</h6>
                    <p class="small text-muted">Farklı kabinler için fiyat giriniz. Eğer First Class yoksa boş bırakabilirsiniz.</p>
                    
                    <h6 class="mt-4">Önemli Not</h6>
                    <div class="alert alert-info small py-2">
                        <i class="bi bi-info-circle me-1"></i> Uçuş oluşturulduktan sonra uçağın koltuk düzeni otomatik olarak oluşturulacaktır.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Kalkış ve varış havaalanı çakışması kontrolü
            $('#DepartureAirportID, #ArrivalAirportID').on('change', function() {
                var departureAirport = $('#DepartureAirportID').val();
                var arrivalAirport = $('#ArrivalAirportID').val();
                
                if (departureAirport && arrivalAirport && departureAirport === arrivalAirport) {
                    alert('Kalkış ve varış havaalanları aynı olamaz!');
                    $(this).val(''); // Seçimi sıfırla
                }
            });
            
            // Varış zamanı kalkış zamanından önce olma kontrolü
            $('#DepartureTime, #ArrivalTime').on('change', function() {
                var departureTime = new Date($('#DepartureTime').val());
                var arrivalTime = new Date($('#ArrivalTime').val());
                
                if (departureTime && arrivalTime && departureTime >= arrivalTime) {
                    alert('Varış zamanı kalkış zamanından sonra olmalıdır!');
                    $(this).val(''); // Zamanı sıfırla
                }
            });
        });
    </script>
}