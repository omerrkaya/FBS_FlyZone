@model EntityLayer.Concrete.Flight
@{
    ViewData["Title"] = "Uçuş Düzenle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Flights">Uçuşlar</a></li>
                    <li class="breadcrumb-item active">Uçuş Düzenle</li>
                </ol>
            </nav>
            <h2 class="mb-1">Uçuş Düzenle</h2>
            <p class="text-muted">Uçuş bilgilerini güncelleyin.</p>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="EditFlight" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <input type="hidden" asp-for="FlightID" />
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="AirlineID" class="form-label">Havayolu</label>
                                <select asp-for="AirlineID" class="form-select" required>
                                    <option value="">Havayolu Seçin</option>
                                    @foreach (var airline in ViewBag.Airlines ?? new List<SelectListItem>())
                                    {
                                        <option value="@airline.Value">@airline.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="AircraftID" class="form-label">Uçak</label>
                                <select asp-for="AircraftID" class="form-select" required>
                                    <option value="">Uçak Seçin</option>
                                    @foreach (var aircraft in ViewBag.Aircrafts ?? new List<SelectListItem>())
                                    {
                                        <option value="@aircraft.Value">@aircraft.Text</option>
                                    }
                                </select>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="DepartureAirportID" class="form-label">Kalkış Havaalanı</label>
                                <select asp-for="DepartureAirportID" class="form-select" required>
                                    <option value="">Havaalanı Seçin</option>
                                    @foreach (var airport in ViewBag.Airports ?? new List<SelectListItem>())
                                    {
                                        <option value="@airport.Value">@airport.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ArrivalAirportID" class="form-label">Varış Havaalanı</label>
                                <select asp-for="ArrivalAirportID" class="form-select" required>
                                    <option value="">Havaalanı Seçin</option>
                                    @foreach (var airport in ViewBag.Airports ?? new List<SelectListItem>())
                                    {
                                        <option value="@airport.Value">@airport.Text</option>
                                    }
                                </select>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="FlightNumber" class="form-label">Uçuş Numarası</label>
                                <input asp-for="FlightNumber" class="form-control" required />
                                <span asp-validation-for="FlightNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label">Durum</label>
                                <select asp-for="Status" class="form-select" required>
                                    <option value="Scheduled">Planlandı</option>
                                    <option value="OnTime">Zamanında</option>
                                    <option value="Delayed">Gecikti</option>
                                    <option value="Cancelled">İptal Edildi</option>
                                    <option value="Completed">Tamamlandı</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="DepartureTime" class="form-label">Kalkış Zamanı</label>
                                <input asp-for="DepartureTime" class="form-control" type="datetime-local" required />
                                <span asp-validation-for="DepartureTime" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ArrivalTime" class="form-label">Varış Zamanı</label>
                                <input asp-for="ArrivalTime" class="form-control" type="datetime-local" required />
                                <span asp-validation-for="ArrivalTime" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label for="EconomyPrice" class="form-label">Ekonomi Fiyatı (TL)</label>
                                <input id="EconomyPrice" name="EconomyPrice" value="@ViewBag.EconomyPrice" class="form-control" type="number" min="0" step="0.01" required />
                            </div>
                            <div class="col-md-4">
                                <label for="BusinessPrice" class="form-label">Business Fiyatı (TL)</label>
                                <input id="BusinessPrice" name="BusinessPrice" value="@ViewBag.BusinessPrice" class="form-control" type="number" min="0" step="0.01" required />
                            </div>
                            <div class="col-md-4">
                                <label for="FirstClassPrice" class="form-label">First Class Fiyatı (TL)</label>
                                <input id="FirstClassPrice" name="FirstClassPrice" value="@ViewBag.FirstClassPrice" class="form-control" type="number" min="0" step="0.01" />
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Gate" class="form-label">Kapı</label>
                            <input asp-for="Gate" class="form-control" />
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Flights" class="btn btn-secondary">İptal</a>
                            <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Uçuş Bilgileri</h5>
                </div>
                <div class="card-body">
                    <p><strong>Uçuş ID:</strong> @Model.FlightID</p>
                    <p><strong>Oluşturma Tarihi:</strong> @Model.CreateDate.ToString("dd.MM.yyyy HH:mm")</p>
                    @if (ViewBag.ReservationCount != null)
                    {
                        <p><strong>Rezervasyon Sayısı:</strong> @ViewBag.ReservationCount</p>
                    }
                </div>
            </div>
            
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Tehlikeli İşlemler</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted small">
                        Uçuşu silmek için butona basın. Bu işlem geri alınamaz ve uçuşun tüm verileri silinir.
                        Eğer bu uçuşa ait rezervasyonlar varsa uçuşu silemezsiniz.
                    </p>
                    <button type="button" class="btn btn-outline-danger w-100" data-bs-toggle="modal" data-bs-target="#deleteFlightModal">
                        <i class="bi bi-trash me-1"></i> Uçuşu Sil
                    </button>
                    
                    <!-- Silme Modal -->
                    <div class="modal fade" id="deleteFlightModal" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Uçuş Sil</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p><strong>@Model.FlightNumber</strong> numaralı uçuşu silmek istediğinize emin misiniz?</p>
                                    <p class="text-muted small">Bu işlem geri alınamaz ve uçuşun tüm verileri silinecektir.</p>
                                    @if (ViewBag.ReservationCount > 0)
                                    {
                                        <div class="alert alert-danger">
                                            <i class="bi bi-exclamation-triangle-fill me-1"></i>
                                            Bu uçuşa ait <strong>@ViewBag.ReservationCount</strong> adet rezervasyon var. 
                                            Bu uçuşu silmek için önce rezervasyonları silmeniz gerekiyor.
                                        </div>
                                    }
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                    @if (ViewBag.ReservationCount <= 0)
                                    {
                                        <a asp-action="DeleteFlight" asp-route-id="@Model.FlightID" class="btn btn-danger">Evet, Sil</a>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-danger" disabled>Evet, Sil</button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Kalkış ve varış havaalanı çakışması kontrolü
            $('#DepartureAirportID, #ArrivalAirportID').on('change', function() {
                var departureAirport = $('#DepartureAirportID').val();
                var arrivalAirport = $('#ArrivalAirportID').val();
                
                if (departureAirport && arrivalAirport && departureAirport === arrivalAirport) {
                    alert('Kalkış ve varış havaalanları aynı olamaz!');
                    $(this).val(''); // Seçimi sıfırla
                }
            });
            
            // Varış zamanı kalkış zamanından önce olma kontrolü
            $('#DepartureTime, #ArrivalTime').on('change', function() {
                var departureTime = new Date($('#DepartureTime').val());
                var arrivalTime = new Date($('#ArrivalTime').val());
                
                if (departureTime && arrivalTime && departureTime >= arrivalTime) {
                    alert('Varış zamanı kalkış zamanından sonra olmalıdır!');
                    $(this).val(''); // Zamanı sıfırla
                }
            });
        });
    </script>
}