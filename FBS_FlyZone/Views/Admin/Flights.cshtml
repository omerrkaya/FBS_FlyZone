@model List<EntityLayer.Concrete.Flight>
@{
    ViewData["Title"] = "Uçuşlar";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Uçuşlar</h2>
            <p class="text-muted">Sisteme kayıtlı tüm uçuşları yönetin.</p>
        </div>
        <div>
            <a asp-action="AddFlight" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i> Yeni Uçuş
            </a>
        </div>
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <!-- Filtreler -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-2">
                    <label class="form-label">Uçuş Numarası</label>
                    <input type="text" name="flightNumber" class="form-control" placeholder="Uçuş numarası...">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Havayolu</label>
                    <select name="airlineId" class="form-select">
                        <option value="">Tümü</option>
                        <!-- Gerçek uygulamada havayolları listesi gelecek -->
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Kalkış</label>
                    <select name="departureAirportId" class="form-select">
                        <option value="">Tümü</option>
                        <!-- Gerçek uygulamada havaalanları listesi gelecek -->
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Varış</label>
                    <select name="arrivalAirportId" class="form-select">
                        <option value="">Tümü</option>
                        <!-- Gerçek uygulamada havaalanları listesi gelecek -->
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Durum</label>
                    <select name="status" class="form-select">
                        <option value="">Tümü</option>
                        <option value="Scheduled">Planlandı</option>
                        <option value="OnTime">Zamanında</option>
                        <option value="Delayed">Gecikti</option>
                        <option value="Cancelled">İptal Edildi</option>
                        <option value="Completed">Tamamlandı</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-secondary w-100">
                        <i class="bi bi-search me-1"></i> Filtrele
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Uçuşlar Tablosu -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Uçuş No</th>
                            <th>Havayolu</th>
                            <th>Kalkış</th>
                            <th>Varış</th>
                            <th>Tarih</th>
                            <th>Saatler</th>
                            <th>Durum</th>
                            <th>Kapasite</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var flight in Model)
                            {
                                <tr>
                                    <td>@flight.FlightNumber</td>
                                    <td>@flight.AirlineID</td>
                                    <td>@flight.DepartureAirportID</td>
                                    <td>@flight.ArrivalAirportID</td>
                                    <td>@flight.DepartureTime.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        @flight.DepartureTime.ToString("HH:mm") - @flight.ArrivalTime.ToString("HH:mm")
                                    </td>
                                    <td>
                                        @switch (flight.Status)
                                        {
                                            case "Scheduled":
                                                <span class="badge bg-primary">Planlandı</span>
                                                break;
                                            case "OnTime":
                                                <span class="badge bg-success">Zamanında</span>
                                                break;
                                            case "Delayed":
                                                <span class="badge bg-warning">Gecikti</span>
                                                break;
                                            case "Cancelled":
                                                <span class="badge bg-danger">İptal</span>
                                                break;
                                            case "Completed":
                                                <span class="badge bg-secondary">Tamamlandı</span>
                                                break;
                                            default:
                                                <span class="badge bg-info">@flight.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <div class="progress" style="height: 6px; width: 60px;">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: 75%"></div>
                                        </div>
                                        <small class="text-muted">75%</small>
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                İşlemler
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href="@Url.Action("EditFlight", new { id = flight.FlightID })"><i class="bi bi-pencil-square me-2"></i>Düzenle</a></li>
                                                <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#deleteModal@(flight.FlightID)"><i class="bi bi-trash me-2"></i>Sil</a></li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li><a class="dropdown-item" href="#"><i class="bi bi-list-check me-2"></i>Rezervasyonlar</a></li>
                                            </ul>
                                        </div>
                                        
                                        <!-- Silme Modal -->
                                        <div class="modal fade" id="deleteModal@(flight.FlightID)" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Uçuş Sil</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p><strong>@flight.FlightNumber</strong> numaralı uçuşu silmek istediğinize emin misiniz?</p>
                                                        <p class="text-danger">Bu işlem geri alınamaz ve uçuşa ait tüm rezervasyonlar silinecektir.</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                                        <a href="@Url.Action("DeleteFlight", new { id = flight.FlightID })" class="btn btn-danger">Evet, Sil</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center py-4">
                                    <div class="alert alert-info mb-0">
                                        <i class="bi bi-info-circle me-2"></i> Henüz kayıtlı uçuş bulunmamaktadır.
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <!-- Sayfalama -->
            @if (Model != null && Model.Any())
            {
                <nav class="mt-3">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Önceki</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Sonraki</a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Otomatik olarak kapanacak uyarılar için
            setTimeout(function() {
                $('.alert-success, .alert-danger').fadeOut('slow');
            }, 5000);
        });
    </script>
}