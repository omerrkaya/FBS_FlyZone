@model List<EntityLayer.Concrete.Flight>
@{
    ViewData["Title"] = "Uçuş Yönetimi";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-4">Uçuş Yönetimi</h2>
            <p class="text-muted">Sistemdeki tüm uçuşları bu sayfadan yönetebilirsiniz.</p>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Uçuşlar</h5>
            <a href="#" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i> Yeni Uçuş Ekle
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Uçuş Kodu</th>
                            <th>Kalkış</th>
                            <th>Varış</th>
                            <th>Tarih</th>
                            <th>Havayolu</th>
                            <th>Uçak</th>
                            <th>Fiyat</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var flight in Model)
                            {
                                <tr>
                                    <td>@flight.FlightID</td>
                                    <td>@flight.Flight_Code</td>
                                    <td>
                                        @if (flight.DepartureAirport != null)
                                        {
                                            @flight.DepartureAirport.IATA_Code
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (flight.ArrivalAirport != null)
                                        {
                                            @flight.ArrivalAirport.IATA_Code
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@flight.Flight_DateTime.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        @if (flight.Airline != null)
                                        {
                                            @flight.Airline.Airlines_Name
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (flight.Aircraft != null)
                                        {
                                            @flight.Aircraft.Aircraft_Model
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>@flight.Flight_Price.ToString("C")</td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="#" class="btn btn-sm btn-info">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="#" class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a href="#" class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center">Henüz uçuş kaydı bulunmamaktadır.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Burada uçuşlarla ilgili JavaScript kodları yer alabilir
        });
    </script>
} 