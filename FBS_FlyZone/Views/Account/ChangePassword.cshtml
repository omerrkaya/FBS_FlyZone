@model FBS_FlyZone.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Şifre Değiştir";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!-- Şifre değiştirme için gerekli olan view templatei yapıldı. tasarımsal olarak button şekilde düşündüm, gerekirse değiştirilebilir, düzeltilebilir. -->

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>Şifre Değiştir</h4>
                </div>
                <!-- Mevcut şifre, yeni şifre ve yeni şifre tekrarı için input alanları oluşturuldu. -->
                <div class="card-body">
                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label"></label>
                            <input asp-for="CurrentPassword" class="form-control" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label"></label>
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="Profile" class="btn btn-secondary">Geri Dön</a>
                            <button type="submit" class="btn btn-primary">Şifremi Değiştir</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 