@model EntityLayer.Concrete.User
@{
	ViewData["Title"] = "Kayıt Ol";
	Layout = "~/Views/Shared/UserLayout.cshtml";
}


<section class="account-section">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-xl-6 col-lg-7">
				<div class="account-form-area" data-aos="fade-up" data-aos-duration="1200">
					<div class="account-content">
						<div class="text-center mb-4">
							<span class="sub-title"><span>Kayıt Ol</span></span>
							<h2 class="section-title">Hesabınızı oluşturun</h2>
						</div>
						@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "account-form" }))
						{
							<div class="row mb-10-none">
								<div class="col-xl-12 form-group">
									<label class="icon"><i class="las la-envelope"></i></label>
									@Html.TextBoxFor(m => m.Email, new { @class = "form--control", placeholder = "E-posta", required = "required" })
									@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
									@* <input type="email" class="form--control" name="Email" placeholder="E-posta" required>*@	
 							</div>
								<div class="col-xl-12 form-group">
									<label class="icon"><i class="icon-name_icone"></i></label>
									@* <input type="text" class="form--control" name="User_Name_Surname" placeholder="Kullanıcı Adı" required> *@	
									@Html.TextBoxFor(m => m.User_Name_Surname, new { @class = "form--control", placeholder = "Kullanıcı Adı", required = "required" })
									@Html.ValidationMessageFor(m => m.User_Name_Surname, "", new { @class = "text-danger" })
							</div>
								<div class="col-xl-12 form-group">
									<label class="icon"><i class="icon-Create_Password_icone"></i></label>
									@*<input type="password" class="form--control" name="UserPassword" placeholder="Şifre Oluştur" required>*@
									@Html.TextBoxFor(m => m.UserPassword, new { @class = "form--control", placeholder = "Şifre Oluştur", required = "required" })
									@Html.ValidationMessageFor(m => m.UserPassword, "", new { @class = "text-danger" })
								</div>
								@*  <div class="col-xl-12 form-group">
                                    <label class="icon"><i class="icon-Create_Password_icone"></i></label>
                                    <input type="password" class="form--control" name="password" placeholder="Şifre Tekrar" required>
                                </div> *@
								<div class="col-lg-12 form-group text-center">
									<p>Kayıt olarak <span>Politikamızı</span> ve <span>Gizlilik Şartlarını</span> okuduğunuzu ve kabul ettiğinizi onaylıyorsunuz.</p>
								</div>
								<div class="col-lg-12 form-group text-center">
									<button type="submit" class="btn--base w-100">Kayıt Ol</button>
								</div>
								<div class="col-lg-12 text-center">
									<div class="or mt-10">
										<label>Veya</label>
									</div>
								</div>
								<div class="col-lg-12 form-group google-submit text-center">
									<button type="submit" class="btn--base w-100"><span class="mr-2"><img src="~/flynext/assets/images/google.png" alt="google"></span> Google ile Devam Et</button>
								</div>
								<div class="col-lg-12 text-center">
									<div class="account-item mt-10">
										<label>Zaten bir hesabınız var mı? <a asp-controller="Account" asp-action="Login" class="text--base">Giriş Yap</a></label>
									</div>
								</div>
							</div>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.account-section {
		background-color: #28333d;
		padding: 120px 0;
	}

	.account-content {
		background-color: #fff;
		border-radius: 15px;
		padding: 40px;
		box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
		text-align: center;
	}

		.account-content .section-title {
			font-size: 24px;
			font-weight: bold;
			margin-top: 10px;
		}

		.account-content .sub-title span {
			font-size: 18px;
			font-weight: bold;
			color: #28333d;
		}
</style>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}