
@{
    ViewData["Title"] = "FlightStatus";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!-- Banner -->
<section class="banner-section" style="background-image: url('@Url.Content("~/flynext/assets/images/siteicerik/businessback.jpg")'); background-size: cover; background-position: center; position: relative;">
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.6);"></div>

    <div class="container text-center text-white position-relative" style="z-index: 2;">
        <h1 class="title" style="font-size: 36px; font-weight: bold;">Uçuş Durumu</h1>
        <p style="font-size: 18px;">Uçuş Bilgilerinize Anlık ve Güvenilir Erişim Sağlayın</p>

        <!-- Fade-in Yazı Kutuları (Banner içinde) -->
        <div class="d-flex justify-content-center gap-4 mt-4 flex-wrap">
            <div class="fade-box">
                Değerli yolcularımız,
                Seyahatinizi en verimli şekilde planlayabilmeniz için uçuşlarınıza ait güncel bilgilere anlık olarak erişim imkânı sunuyoruz. Kalkış ve varış saatleri, olası gecikmeler ve iptaller gibi kritik bilgiler tarafımızdan sürekli olarak güncellenmektedir. Güvenli ve konforlu bir seyahat deneyimi için uçuş durumunuzu sistemimiz üzerinden kolayca takip edebilirsiniz.
            </div>

        </div>
    </div>
</section>

<!-- Başlık -->
<div class="container text-center mt-4">
    <h2 class="text-dark">UÇUŞ DURUMU</h2>
</div>

<!-- Form -->
<div class="form-container mt-4">
    <form method="post">
        <div class="d-flex justify-content-center align-items-center gap-2" style="border-radius:15px;margin-right:5px">
            <!-- Combobox -->
            <select class="form-select combobox-custom form-control" name="secim" style="border-radius:15px;margin-right:5px">
                <option selected disabled>Uçuş No</option>
                <option value="1">1001</option>
                <option value="2">2342</option>
                <option value="3">5894</option>
            </select>

            <!-- TK + Textbox -->
            <div class="input-group textbox-custom align-items-center" style="height: 50px; margin-top: 14px;margin-left:5px; margin-right:15px; background-color:#DCBB87;">
                <span class="input-group-text text-dark fw-bold" style="background-color:white; border-radius:5px;margin-right:3px;margin-left:3px;">TK</span>
                <input type="text" name="ucusNo" class="form-control" placeholder="Uçuş numaranızı girin" style="background-color:white;border-radius:5px;margin-left:3px;margin-right:3px;">
            </div>

            <!-- Tarih -->
            <input type="date" name="tarih" class="form-control date-custom" value="" style="margin-right:5px">

            <!-- OK Button -->
            <button type="submit" class="btn btn-danger d-flex align-items-center justify-content-center date-custom" style="border-radius:5px;">
                <i class="bi bi-arrow-right"></i>
            </button>
        </div>
    </form>
</div>

<!-- Stil -->
<style>
    body {
        background-color: #FFFFFF;
    }

    .form-container {
        background: #0F172A;
        padding: 25px;
        max-width: 900px;
        margin: 40px auto;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .combobox-custom,
    .textbox-custom,
    .date-custom {
        height: 50px;
    }

    .combobox-custom {
        background-color: #DCBB87;
        color: white;
        font-weight: bold;
        min-width: 140px;
        border-radius: 0px;
    }

    .textbox-custom {
        background-color: white;
        border-radius: 5px;
        min-width: 300px;
        display: flex;
        align-items: center;
    }

    .date-custom {
        min-width: 160px;
    }

    .input-group-text {
        min-width: 45px;
    }

    .btn-danger {
        background-color: #DCBB87 !important;
        border-color: #DCBB87 !important;
        color: black !important;
    }

        .btn-danger:hover {
            background-color: #c4a673 !important;
            border-color: #c4a673 !important;
        }

    .banner-section .title {
        color: #DCBB87;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
    }


    /* Banner içindeki kutulara fade-in */
    .fade-box {
        background-color: #dcbb87;
        color: black;
        padding: 35px 35px; /* Daha büyük iç boşluk */
        border-radius: 10px;
        font-weight: bold;
        font-size: 18px; /* Yazı boyutu büyütüldü */
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 1s ease forwards;
        margin: 10px;
        min-width: 400px; /* Daha geniş kutu */
        text-align: center;
    }



        .fade-box:nth-child(1) {
            animation-delay: 0.5s;
        }

        .fade-box:nth-child(2) {
            animation-delay: 1s;
        }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

