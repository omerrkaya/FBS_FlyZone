<!--PaymentSuccess.cshtml başarılı ödeme sayfası. -->
@{
    ViewData["Title"] = "Ödeme Başarılı";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<div style="margin-top: 50px;"></div> <!-- Başarılı ödeme sayfasının üstüne boşluk bırakır. Navbar ile arasında boşluk bırakır. -->

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                    </div>
                    
                    <h2 class="mb-4">Ödemeniz Başarıyla Tamamlandı!</h2>
                    
                    <p class="lead mb-4">
                        Bilet detayları ve faturanız e-posta adresinize gönderildi.
                    </p>
                    
                    <div class="alert alert-info">
                        <p class="mb-0"><strong>Önemli Bilgi:</strong> Uçuştan önce havaalanında olmanız gereken süre 2 saattir.</p>
                    </div>
                    
                    <hr class="my-4">
                    
                    <div class="row">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5>Uçuş Bilgileri</h5>
                                    <p class="card-text">
                                        <strong>Tarih:</strong> 15.08.2025<br>
                                        <strong>Uçuş:</strong> İstanbul - Antalya<br>
                                        <strong>Kalkış:</strong> 08:30<br>
                                        <strong>Varış:</strong> 09:45<br>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5>Yolcu Bilgileri</h5>
                                    <p class="card-text">
                                        <strong>Yolcu:</strong> John Smith<br>
                                        <strong>E-posta:</strong> john@example.com<br>
                                        <strong>PNR No:</strong> ABC123<br>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-5">
                        <a href="/" class="btn btn-primary me-2">Ana Sayfaya Dön</a>
                        <a href="#" class="btn btn-outline-secondary">Biletlerimi Görüntüle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 