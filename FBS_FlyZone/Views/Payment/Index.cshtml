<!--Index.cshtml ödeme sayfası. -->
@model FBS_FlyZone.Models.PaymentViewModel
@{
    ViewData["Title"] = "Ödeme";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<div style="margin-top: 50px;"></div> <!-- Ödeme sayfasının üstüne boşluk bırakır. Navbar ile arasında boşluk bırakır. -->

<div class="container py-5">
    <div class="row">
        <!-- Sol Taraf - Ödeme Formu -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Ödeme Bilgileri</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-4">
                            <h5 class="mb-3">Kart Bilgileri</h5>
                            
                            <div class="mb-3">
                                <label asp-for="CardHolderName" class="form-label">Kart Üzerindeki İsim</label>
                                <input asp-for="CardHolderName" class="form-control" placeholder="JOHN SMITH">
                                <span asp-validation-for="CardHolderName" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <label asp-for="CardNumber" class="form-label">Kart Numarası</label>
                                <div class="input-group">
                                    <input asp-for="CardNumber" class="form-control" placeholder="1234 5678 9012 3456">
                                    <span class="input-group-text">
                                        <i class="bi bi-credit-card"></i>
                                    </span>
                                </div>
                                <span asp-validation-for="CardNumber" class="text-danger"></span>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label asp-for="ExpiryDate" class="form-label">Son Kullanma Tarihi</label>
                                    <input asp-for="ExpiryDate" class="form-control" placeholder="MM/YY">
                                    <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="CVV" class="form-label">CVV</label>
                                    <input asp-for="CVV" class="form-control" placeholder="123">
                                    <span asp-validation-for="CVV" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <h5 class="mb-3">Fatura Bilgileri</h5>
                            
                            <div class="mb-3">
                                <label class="form-label">Fatura Adresi</label>
                                <textarea class="form-control" rows="3" placeholder="Sokak, Mahalle, İlçe, Şehir"></textarea>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label">Şehir</label>
                                    <input type="text" class="form-control" placeholder="İstanbul">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Posta Kodu</label>
                                    <input type="text" class="form-control" placeholder="34000">
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label">E-posta (Bilet için)</label>
                                <input type="email" class="form-control" placeholder="ornek@email.com">
                            </div>
                        </div>
                        
                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="acceptTerms">
                            <label class="form-check-label" for="acceptTerms">
                                Ödeme koşullarını ve gizlilik politikasını kabul ediyorum
                            </label>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Ödemeyi Tamamla</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Sağ Taraf - Sipariş Özeti -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0">Sipariş Özeti</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <span>Uçuş Bilgisi:</span>
                        <span>İstanbul - Antalya</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Tarih:</span>
                        <span>15.08.2025</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Yolcu:</span>
                        <span>1 Yetişkin</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Bilet Ücreti:</span>
                        <span>1.200 ₺</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Vergiler:</span>
                        <span>350 ₺</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Hizmet Bedeli:</span>
                        <span>50 ₺</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <strong>Toplam Tutar:</strong>
                        <strong>1.600 ₺</strong>
                    </div>
                </div>
            </div>
            
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Güvenli Ödeme</h5>
                </div>
                <div class="card-body">
                    <p class="small text-muted">
                        Tüm kredi kartı bilgileriniz SSL sertifikası ile şifrelenerek korunmaktadır. 
                        Bilgileriniz üçüncü partilerle paylaşılmaz.
                    </p>
                    <div class="text-center mt-3">
                        <i class="bi bi-shield-lock fs-1 text-success"></i>
                    </div>
                </div>
            </div>
            
            <div class="d-grid">
                <a href="#" class="btn btn-outline-secondary mb-2">
                    <i class="bi bi-arrow-left"></i> Uçuş Seçimine Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Kredi kartı numarası formatlama (4 hanede bir boşluk)
        $(document).ready(function() {
            $("#CardNumber").on("keyup", function() {
                var value = $(this).val().replace(/\s+/g, "").replace(/[^0-9]/gi, ""); //4 hanede bir boşluk koyar.
                var formattedValue = "";
                
                for(var i = 0; i < value.length; i++) {
                    if(i > 0 && i % 4 === 0){
                        formattedValue += " ";
                    }
                    formattedValue += value[i];
                }
                
                $(this).val(formattedValue);
            });
            
            // Son kullanma tarihi formatlama (MM/YY)
            $("#ExpiryDate").on("keyup", function() {
                var value = $(this).val().replace(/\s+/g, "").replace(/[^0-9]/gi, ""); //4 hanede bir boşluk koyar.
                
                if(value.length > 2) {
                    value = value.substring(0, 2) + "/" + value.substring(2, 4); //2 haneden sonra / koyar.
                }
                
                $(this).val(value);
            });
        });
    </script>
} 