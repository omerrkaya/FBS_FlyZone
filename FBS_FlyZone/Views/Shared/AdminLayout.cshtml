<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FlyZone Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- bootstrap css link -->
    <link rel="stylesheet" href="~/flynext/assets/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .sidebar {
            background-color: #212529;
            min-height: 100vh;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 100;
            padding: 48px 0 0;
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
            width: 250px;
        }
        
        .sidebar-sticky {
            position: relative;
            top: 0;
            height: calc(100vh - 48px);
            padding-top: .5rem;
            overflow-x: hidden;
            overflow-y: auto;
        }
        
        .nav-link {
            font-weight: 500;
            color: rgba(255, 255, 255, .75);
            padding: .75rem 1rem;
            margin-bottom: 0.5rem;
        }
        
        .nav-link:hover {
            color: #fff;
            background-color: rgba(255, 255, 255, .05);
        }
        
        .nav-link.active {
            color: #fff;
            background-color: rgba(255, 255, 255, .1);
            border-left: 4px solid #0d6efd;
        }
        
        .nav-link .bi {
            margin-right: 10px;
        }
        
        .main-content {
            margin-left: 250px;
            padding: 70px 30px 30px;
        }
        
        .navbar {
            position: fixed;
            top: 0;
            right: 0;
            left: 250px;
            z-index: 99;
            height: 48px;
        }
        
        .card-stats {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            transition: transform 0.3s;
        }
        
        .card-stats:hover {
            transform: translateY(-5px);
        }
        
        .stat-icon {
            font-size: 2rem;
            padding: 15px;
            border-radius: 50%;
            margin-right: 15px;
        }
        
        /* Eklenen yeni stiller */
        .dropdown-menu {
            min-width: 16rem;
            padding: 0.5rem 0;
            margin: 0;
            font-size: 0.875rem;
        }
        
        .dropdown-item {
            padding: 0.5rem 1rem;
        }
        
        .notification-item {
            border-bottom: 1px solid #e9ecef;
            padding: 0.75rem 1rem;
        }
        
        .notification-item:last-child {
            border-bottom: none;
        }
        
        .notification-item .notification-title {
            font-weight: 600;
            font-size: 0.875rem;
        }
        
        .notification-item .notification-text {
            font-size: 0.8125rem;
            color: #6c757d;
        }
        
        .notification-item .notification-time {
            font-size: 0.75rem;
            color: #6c757d;
        }
        
        .badge {
            position: absolute;
            top: 0;
            right: 0;
            transform: translate(25%, -25%);
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar">
        <div class="sidebar-sticky">
            <div class="d-flex align-items-center justify-content-center mb-4 py-2 border-bottom">
                <a href="/Admin" class="text-decoration-none">
                    <h4 class="text-white"><i class="bi bi-airplane me-2"></i>FlyZone Admin</h4>
                </a>
            </div>
            
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")" asp-controller="Admin" asp-action="Index">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Users" ? "active" : "")" asp-controller="Admin" asp-action="Users">
                        <i class="bi bi-people"></i> Kullanıcılar
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Flights" ? "active" : "")" asp-controller="Admin" asp-action="Flights">
                        <i class="bi bi-airplane"></i> Uçuşlar
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Reservations" ? "active" : "")" asp-controller="Admin" asp-action="Reservations">
                        <i class="bi bi-calendar-check"></i> Rezervasyonlar
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Airlines" ? "active" : "")" asp-controller="Admin" asp-action="Airlines">
                        <i class="bi bi-building"></i> Havayolları
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Airports" ? "active" : "")" asp-controller="Admin" asp-action="Airports">
                        <i class="bi bi-geo-alt"></i> Havaalanları
                    </a>
                </li>
            </ul>
            
            <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-white text-uppercase">
                <span>Ayarlar</span>
            </h6>
            <ul class="nav flex-column mb-2">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Settings" ? "active" : "")" asp-controller="Admin" asp-action="Settings">
                        <i class="bi bi-gear"></i> Sistem Ayarları
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Reports" ? "active" : "")" asp-controller="Admin" asp-action="Reports">
                        <i class="bi bi-file-earmark-bar-graph"></i> Raporlar
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Account/Logout">
                        <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    
    <!-- Top Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle position-relative" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-bell"></i>
                            <span class="badge bg-danger rounded-circle">3</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><h6 class="dropdown-header">Bildirimler</h6></li>
                            <li>
                                <div class="notification-item">
                                    <div class="notification-title">Yeni rezervasyon: #REZ123</div>
                                    <div class="notification-text">İstanbul-Ankara uçuşu için yeni rezervasyon yapıldı</div>
                                    <div class="notification-time">5 dakika önce</div>
                                </div>
                            </li>
                            <li>
                                <div class="notification-item">
                                    <div class="notification-title">Yeni kullanıcı: Ahmet Yılmaz</div>
                                    <div class="notification-text">Yeni bir kullanıcı kaydoldu</div>
                                    <div class="notification-time">1 saat önce</div>
                                </div>
                            </li>
                            <li>
                                <div class="notification-item">
                                    <div class="notification-title">Uçuş rötarı: TK1923</div>
                                    <div class="notification-text">Ankara-İzmir uçuşu 45 dakika rötarlı</div>
                                    <div class="notification-time">3 saat önce</div>
                                </div>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-center" href="#">Tüm bildirimleri görüntüle</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle me-1"></i> Admin
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Profil</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Hesap Ayarları</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/Account/Logout"><i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Chart.js - İstatistikler için -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Yeni admin sayfalarını desteklemek için eklenen script -->
    <script>
        $(document).ready(function() {
            // Bildirim sayısını güncelleme
            function updateNotificationCount() {
                // Gerçek bir uygulamada bu fonksiyon Ajax ile sunucudan bildirim sayısını alır
                // Şimdilik sabit bir değer kullanıyoruz
                let count = 3;
                $('.badge').text(count);
            }
            
            // Sayfa yüklendiğinde bildirimleri güncelle
            updateNotificationCount();

            // Sayfa transition efektleri
            $('.card-stats').addClass('animate__animated animate__fadeIn');
        });
    </script>
</body>
</html>