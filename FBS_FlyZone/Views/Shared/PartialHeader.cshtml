<script>
	// Arama butonu tıklandığında arama alanını göster/gizle
	document.addEventListener('DOMContentLoaded', function() {
		const searchBtn = document.querySelector('.search-bar a');
		const searchArea = document.querySelector('.header-top-search-area');

		if (searchBtn && searchArea) {
			// Sayfa yüklendiğinde gizli durumda başlat
			searchArea.style.display = 'none';

			searchBtn.addEventListener('click', function(e) {
				e.preventDefault();
				// Toggle arama alanı görünürlüğü
				if (searchArea.style.display === 'none' || !searchArea.style.display) {
					searchArea.style.display = 'block';
					// Arama alanına odaklan
					document.getElementById('header_search').focus();
				} else {
					searchArea.style.display = 'none';
				}
			});

			// Sayfa herhangi bir yerine tıklandığında arama alanını gizle
			document.addEventListener('click', function(e) {
				// Eğer tıklanan öğe arama butonu veya arama alanının içi değilse
				if (!e.target.closest('.search-bar') && searchArea.style.display === 'block') {
					searchArea.style.display = 'none';
				}
			});
		}
	});
</script>

